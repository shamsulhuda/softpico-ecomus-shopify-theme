<div class="tf-product-media-wrap sticky-top">
    <div class="thumbs-slider">
        <div dir="ltr" class="swiper tf-product-media-thumbs other-image-zoom{% if product.media.size <= 1 %} d-none{% endif %}"
            data-direction="vertical">
            <div class="swiper-wrapper stagger-wrap">
                {% if product.selected_or_first_available_variant.featured_media != null %}
                {% assign featured_media_thumb = product.selected_or_first_available_variant.featured_media %}
                <div class="swiper-slide stagger-item" data-color="beige">
                    <div class="item">
                        {{ featured_media_thumb |  image_url: width: 300 |  image_tag: sizes: '100,200,300', class:'lazyload', alt: featured_media_thumb.alt }}
                    </div>
                </div>
                {% endif %}
                {% for media in product.media %}
                    {% case media.media_type %}
                        {% when 'image' %}
                        {% unless media.id == product.selected_or_first_available_variant.featured_media.id %}
                        <div class="swiper-slide stagger-item" data-color="beige">
                            <div class="item">
                                {{ media |  image_url: width: 300 |  image_tag: sizes: '100,200,300', class:'lazyload', alt: media.alt }}
                            </div>
                        </div>
                        {% endunless %}
                        {% when 'video' %}
                    {% endcase %}
                {% endfor %}
            </div>
        </div>
        <div dir="ltr" class="swiper tf-product-media-main" id="gallery-swiper-started">
            <div class="swiper-wrapper">
                {% if product.selected_or_first_available_variant.featured_media != null %}
                {% assign featured_media = product.selected_or_first_available_variant.featured_media %}
                {%  assign featured_link = product.selected_or_first_available_variant.featured_media |  image_url: width: 1920  %}
                    <div class="swiper-slide" data-color="beige">
                        <a href="{{ featured_link }}" target="_blank" class="item"
                            data-pswp-width="770px" data-pswp-height="1075px">
                            {{ featured_media |  image_url: width: 1000 |  image_tag: sizes: '100,200,300', class:'tf-image-zoom lazyload', data-zoom: featured_link, alt: featured_media.alt }}
                        </a>
                    </div>
                {% endif %}
                {% for media in product.media %}
                    {% case media.media_type %}
                        {% when 'image' %}
                        {% unless media.id == product.selected_or_first_available_variant.featured_media.id %}
                        {% assign image_link = media | image_url: width: 1920 %}
                        <div class="swiper-slide" data-color="beige">
                            <a href="{{ image_link }}" target="_blank" class="item"
                                data-pswp-width="770px" data-pswp-height="1075px">
                                {{ media |  image_url: width: 1000 |  image_tag: sizes: '100,200,300', class:'tf-image-zoom lazyload', data-zoom: image_link, alt: media.alt }}
                            </a>
                        </div>
                        {% endunless %}
                        {% when 'video' %}
                    {% endcase %}
                {% endfor %}
            </div>
            <div class="swiper-button-next button-style-arrow thumbs-next"></div>
            <div class="swiper-button-prev button-style-arrow thumbs-prev"></div>
        </div>
    </div>
</div>