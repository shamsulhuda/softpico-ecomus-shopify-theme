<!-- Categories -->
  {% style %}
    .padding-{{ section.id }}{
        padding-top: {{ section.settings.padding_top |  append: 'px' }};
        padding-bottom: {{ section.settings.padding_bottom |  append: 'px' }};
    }

    @media screen and (max-width: 750px){
        .padding-{{ section.id }}{
            padding-top: {{ section.settings.padding_top | minus: 5 | append: 'px' }};
            padding-bottom: {{ section.settings.padding_bottom | minus: 5 | append: 'px' }};
        }
    }
 {% endstyle %}
<section class="flat-spacing-5 padding-{{ section.id }} color-{{ section.settings.color }} gradient">
    <div class="container">
        {% if section.settings.heading != blank %}
        <div class="flat-title">
            <span class="title wow fadeInUp" data-wow-delay="0s">{{ section.settings.heading }}</span>
        </div>
        {% endif %}
        <div class="hover-sw-nav">
            <div dir="ltr" class="swiper tf-sw-collection" data-preview="{{ section.settings.desktop_view }}" data-tablet="{{ section.settings.tablet_view }}" data-mobile="{{ section.settings.mobile_view }}"
                data-space-lg="30" data-space-md="30" data-space="{{ section.settings.space }}" data-loop="{{ section.settings.loop }}" data-auto-play="{{ section.settings.autoplay }}">
                <div class="swiper-wrapper">
                    {% for block in section.blocks %}
                    <div class="swiper-slide" lazy="true" {{ block.shopify_attributes }}>
                        <div class="collection-item style-2 hover-img">
                            <div class="collection-inner">
                                <a href="{{ block.settings.collection.url }}" class="collection-image img-style">
                                    {% if block.settings.image %}
                                    {{ block.settings.collection.image |  image_url: width: 400 | image_tag: alt: block.settings.collection.title  }}
                                    
                                    {% elsif block.settings.collection.featured_image %}
                                        {{ block.settings.collection.featured_image |  image_url: width: 400 | image_tag: alt: block.settings.collection.title  }}
                                    {% else %}
                                        {{ 'collection-1' | placeholder_svg_tag }}
                                    {% endif %}
                                </a>
                                <div class="collection-content">
                                    <a href="{{ block.settings.collection.url }}"
                                        class="tf-btn collection-title hover-icon fs-15 rounded-full">
                                        {% if block.settings.button_label != blank %}
                                            <span>{{ block.settings.button_label }}</span>
                                        {% else %}
                                            <span>{{ block.settings.collection.title | escape }}</span>
                                        {% endif %}
                                        <i class="icon icon-arrow1-top-left"></i>
                                        </a>
                                </div>
                            </div>
                        </div>
                    </div>
                    {% endfor %}

                </div>
            </div>
            {% if section.settings.slider_arrow %}
            <div class="nav-sw nav-next-slider nav-next-collection box-icon w_46 round"><span
                    class="icon icon-arrow-left"></span></div>
            <div class="nav-sw nav-prev-slider nav-prev-collection box-icon w_46 round"><span
                    class="icon icon-arrow-right"></span></div>
            <div class="sw-dots style-2 sw-pagination-collection justify-content-center"></div>
            {% endif %}
        </div>
    </div>
</section>
<!-- /Categories -->

