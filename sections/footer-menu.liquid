<!-- footer -->
<footer id="footer" class="footer background-gray md-pb-70">
    <div class="footer-wrap">
        <div class="footer-body">
            <div class="container">
                <div class="row">
                    {% for block in section.blocks %}
                        {% case block.type %}
                            {% when 'store_info' %}
                                <div class="col-xl-3 col-md-6 col-12" {{ block.shopify_attributes }}>
                                    <div class="footer-infor">
                                        <div class="footer-logo">
                                            <a href="{{ shop.url }}">
                                                {% if settings.logo and block.settings.branding == 'logo' %}
                                                {{ settings.logo |  image_url: width: settings.logo_width |  image_tag: alt: shop.name}}
                                                {% else %}
                                                    {% if block.settings.branding == 'title' %}
                                                        {{ block.settings.title }}
                                                    {% else %}
                                                    {{ shop.name }}
                                                    {% endif %}
                                                {% endif %}
                                            </a>
                                        </div>
                                        {{ block.settings.address }}
                                        {% if block.settings.show_social_media %}
                                        <ul class="tf-social-icon d-flex gap-10">
                                            <li><a href="#" class="box-icon w_34 round social-facebook social-line"><i
                                                        class="icon fs-14 icon-fb"></i></a></li>
                                            <li><a href="#" class="box-icon w_34 round social-twiter social-line"><i
                                                        class="icon fs-12 icon-Icon-x"></i></a></li>
                                            <li><a href="#" class="box-icon w_34 round social-instagram social-line"><i
                                                        class="icon fs-14 icon-instagram"></i></a></li>
                                            <li><a href="#" class="box-icon w_34 round social-tiktok social-line"><i
                                                        class="icon fs-14 icon-tiktok"></i></a></li>
                                            <li><a href="#" class="box-icon w_34 round social-pinterest social-line"><i
                                                        class="icon fs-14 icon-pinterest-1"></i></a></li>
                                        </ul>
                                        {% endif %}
                                    </div>
                                </div>
                            {% when 'menu_list' %}
                            <div class="col-xl-3 col-md-6 col-12 footer-col-block" {{ block.shopify_attributes }}>
                                {% if block.settings.link_heading != blank %}
                                <div class="footer-heading footer-heading-desktop">
                                    <h6>{{ block.settings.link_heading }}</h6>
                                </div>
                                <div class="footer-heading footer-heading-moblie">
                                    <h6>{{ block.settings.link_heading }}</h6>
                                </div>
                                {% endif %}
                                {% if block.settings.footer_menu != blank %}
                                <ul class="footer-menu-list tf-collapse-content">
                                    {% for link in block.settings.footer_menu.links %}
                                    <li>
                                        <a href="{{ link.url }}" class="footer-menu_item">{{ link.title }}</a>
                                    </li>
                                    {% endfor %}
                                </ul>
                                {% endif %}
                            </div>
                            {% when 'signup' %}
                            <div class="col-xl-3 col-md-6 col-12" {{ block.shopify_attributes }}>
                                <div class="footer-newsletter footer-col-block">
                                    {% if block.settings.link_heading != blank %}
                                    <div class="footer-heading footer-heading-desktop">
                                        <h6>{{ block.settings.link_heading }}</h6>
                                    </div>
                                    <div class="footer-heading footer-heading-moblie">
                                        <h6>{{  block.settings.link_heading }}</h6>
                                    </div>
                                    {% endif %}
                                    <div class="tf-collapse-content">
                                        {% if block.settings.text != blank %}
                                        <div class="footer-menu_item">{{ block.settings.text }}</div>
                                        {% endif %}
                                        
                                        {% form 'customer', class: 'form-newsletter' %}
                                            <div id="subscribe-content">
                                                <fieldset class="email">
                                                    <input type="email" name="contact[email]" id="subscribe-email"
                                                        placeholder="Enter your email...." tabindex="0"
                                                        aria-required="true">
                                                </fieldset>
                                                <div class="button-submit">
                                                    <button id="subscribe-button"
                                                        class="tf-btn btn-sm radius-3 btn-fill btn-icon animate-hover-btn"
                                                        type="submit">Subscribe<i
                                                            class="icon icon-arrow1-top-left"></i></button>
                                                </div>
                                            </div>
                                            {% if form.errors %}
                                            <div id="subscribe-msg">{{ form.errors | default }}</div>
                                            {% endif %}
                                        {% endform %}
                                    </div>
                                </div>
                            </div>
                        {% endcase %}
                    
                    {% endfor %}
                </div>
            </div>
        </div>
        <div class="footer-bottom">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <div
                            class="footer-bottom-wrap d-flex gap-20 flex-wrap justify-content-between align-items-center">
                            <div class="footer-menu_item">Â© 2025 Ecomus Store. All Rights Reserved</div>
                            <div class="tf-payment">
                                <img src="images/payments/visa.png" alt="">
                                <img src="images/payments/img-1.png" alt="">
                                <img src="images/payments/img-2.png" alt="">
                                <img src="images/payments/img-3.png" alt="">
                                <img src="images/payments/img-4.png" alt="">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</footer>
<!-- /footer -->

{% schema %}
    {
        "name": "Footer menu",
        "settings": [
        ],
        "blocks": [
            {
                "type": "store_info",
                "name": "Store info",
                "limit": 1,
                "settings": [
                    {
                        "type": "select",
                        "id": "branding",
                        "label": "Branding",
                        "options": [
                            {
                                "label": "Logo",
                                "value": "logo"
                            },
                            {
                                "label": "Title",
                                "value": "title"
                            }
                        ],
                        "default": "logo"
                    },
                    {
                        "type": "text",
                        "id": "title",
                        "label": "Title",
                        "visible_if": "{{ block.settings.branding == 'title' }}"
                        
                    },
                    {
                        "type": "html",
                        "id": "address",
                        "label": "Store Address"
                    },
                    {
                        "type": "checkbox",
                        "id": "show_social_media",
                        "label": "Show Social Media icons",
                        "default": true
                    }
                ]
            },
            {
                "type": "menu_list",
                "name": "Menu links",
                "settings": [
                    {
                        "type": "text",
                        "id": "link_heading",
                        "label": "Link heading",
                        "default": "Help"
                    },
                    {
                        "type": "link_list",
                        "id": "footer_menu",
                        "label": "Footer menu",
                        "default": "footer"
                    }
                ]
            },
            {
                "type": "signup",
                "name": "Sign up",
                "limit": 1,
                "settings": [
                    {
                        "type": "text",
                        "id": "link_heading",
                        "label": "Link heading",
                        "default": "Help"
                    },
                    {
                        "type": "inline_richtext",
                        "id": "text",
                        "label": "Signup description"
                    }
                ]
            }
        ]
    }
{% endschema %}
