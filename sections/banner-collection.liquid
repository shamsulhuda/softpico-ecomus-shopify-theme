<!-- Banner Collection -->
  {% style %}
    .padding-{{ section.id }}{
        padding-top: {{ section.settings.padding_top |  append: 'px' }};
        padding-bottom: {{ section.settings.padding_bottom |  append: 'px' }};
    }

    @media screen and (max-width: 750px){
        .padding-{{ section.id }}{
            padding-top: {{ section.settings.padding_top | minus: 5 | append: 'px' }};
            padding-bottom: {{ section.settings.padding_bottom | minus: 5 | append: 'px' }};
        }
    }
 {% endstyle %}
<section class="flat-spacing-10 padding-{{ section.id }} color-{{ section.settings.color }} gradient">
    <div class="container">
        <div dir="ltr" class="swiper tf-sw-recent" data-preview="{{ section.settings.desktop_view }}" data-tablet="{{ section.settings.tablet_view }}" data-mobile="{{ section.settings.mobile_view }}"
            data-space-lg="{{ section.settings.desktop_space }}" data-space-md="{{ section.settings.tablet_space }}" data-space="15" data-pagination="1" data-pagination-md="1"
            data-pagination-lg="1" data-loop="{{ section.settings.loop }}" data-auto-play="{{ section.settings.autoplay }}">
            <div class="swiper-wrapper">
                {% for block in section.blocks %}
                <div class="swiper-slide" lazy="true" {{ block.shopify_attributes }}>
                    <div class="collection-item-v4 hover-img">
                        <div class="collection-inner">
                            <a href="{{ block.settings.collection.url }}" class="collection-image img-style radius-10">
                                {% if  block.settings.image %}
                                    {{ block.settings.image |  image_url: width: 650 |  image_tag: sizes: "300,350,400,450,500,550,600,650", alt: block.settings.collection.title }}
                                {%  elsif block.settings.collection.featured_image %}
                                {{ block.settings.collection.featured_image |  image_url: width: 650 |  image_tag: sizes: "300,350,400,450,500,550,600,650", alt: block.settings.collection.title }}
                                {% else %}
                                    {{ 'collection-2' | placeholder_svg_tag }}
                                {% endif %}
                            </a>
                            <div class="collection-content wow fadeInUp" data-wow-delay="0s">
                                <h5 class="heading">{{ block.settings.collection.title | default: 'The January Collection' }}</h5>
                                <a href="{{ block.settings.collection.url }}"
                                    class="tf-btn style-3 fw-6 rounded-full animate-hover-btn"><span>{{ block.settings.button_label }}</span></a>
                            </div>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
    </div>
</section>
<!-- /Banner Collection -->

{% schema %}
    {
        "name": "Banner Collection",
        "settings": [
            {
                "type": "color_scheme",
                "id": "color",
                "label": "Color",
                "default": "scheme-1"
            },
            {
                "type": "header",
                "content": "Slider settings"
            },
            {
                "type": "select",
                "id": "desktop_view",
                "label": "Desktop slider",
                "options": [
                    {
                        "label": "1",
                        "value": "1"
                    },
                    {
                        "label": "2",
                        "value": "2"
                    },
                    {
                        "label": "3",
                        "value": "3"
                    },
                    {
                        "label": "4",
                        "value": "4"
                    },
                    {
                        "label": "5",
                        "value": "5"
                    }
                ],
                "default": "2"
            },
            {
                "type": "select",
                "id": "tablet_view",
                "label": "Table slider",
                "options": [
                    {
                        "label": "1",
                        "value": "1"
                    },
                    {
                        "label": "2",
                        "value": "2"
                    },
                    {
                        "label": "3",
                        "value": "3"
                    },
                    {
                        "label": "4",
                        "value": "4"
                    }
                ],
                "default": "2"
            },
            {
                "type": "range",
                "id": "mobile_view",
                "label": "Mobile Slider",
                "min": 0,
                "max": 5,
                "step": 0.1,
                "default": 1.3
            },
            {
                "type": "range",
                "id": "desktop_space",
                "label": "Desktop Space",
                "min": 0,
                "max": 50,
                "step": 1,
                "unit": "px",
                "default": 30
            },
            {
                "type": "range",
                "id": "tablet_space",
                "label": "Tablet space",
                "min": 0,
                "max": 30,
                "step": 1,
                "unit": "px",
                "default": 15
            },
            {
                "type": "checkbox",
                "id": "loop",
                "label": "Slider loop",
                "default": false
            },
            {
                "type": "checkbox",
                "id": "autoplay",
                "label": "Autoplay",
                "default": false
            },
            {
                "type": "header",
                "content": "Section padding"
            },
            {
                "type": "range",
                "id": "padding_top",
                "label": "Padding top",
                "min": 0,
                "max": 100,
                "step": 1,
                "unit": "px",
                "default": 15
            },
            {
                "type": "range",
                "id": "padding_bottom",
                "label": "Padding bottom",
                "min": 0,
                "max": 100,
                "step": 1,
                "unit": "px",
                "default": 15
            }
        ],
        "blocks": [
            {
                "type": "collection",
                "name": "Collection",
                "settings": [
                    {
                        "type": "collection",
                        "id": "collection",
                        "label": "Collection"
                    },
                    {
                        "type": "image_picker",
                        "id": "image",
                        "label": "Custom image"
                    },
                    {
                        "type": "inline_richtext",
                        "id": "title",
                        "label": "Custom title"
                    },
                    {
                        "type": "text",
                        "id": "button_label",
                        "label": "Button Label",
                        "default": "Shop now"
                    }
                ]
            }
        ],
        "presets": [
            {
                "name": "Banner Collection",
                "blocks": [
                    {
                        "type": "collection"
                    },
                    {
                        "type": "collection"
                    }
                ]
            }
        ]
    }
{% endschema %}
